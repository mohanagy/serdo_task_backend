{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": "."
  },
  "include": ["src/**/*", "src/types/**/*", "express-session.d.ts"],
  "exclude": ["node_modules"]
}
